<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
  <h2>Edit Post</h2>
  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="post">
    <input type="submit" value="Delete" class="btn btn-delete" />
  </form>
</div>

<form
  action="/edit-post/<%= data._id %>?_method=PUT"
  enctype="multipart/form-data"
  method="POST"
>
  <label for="title">Title</label>
  <input
    type="text"
    name="title"
    value="<%= data.title %>"
    placeholder="Post Title"
  />
  <label for="imagePath">Post Banner</label>
  <input type="file" accept="image/png, image/jpeg" name="imagePath" />
  <div class="_img-container">
    <img src="/assets/img/webUpload/<%= data.imageName %>" />
  </div>
  <label for="content">Content</label>
  <textarea
    style="resize: none; aspect-ratio: 1 / 0.35"
    name="content"
    placeholder="Post Title"
  >
<%= data.content %></textarea
  >

  <input type="submit" value="Update" class="btn" />
</form>
