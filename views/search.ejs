<div class="author">
  <h1 class="author--heading">Search Results</h1>
</div>

<section class="articles">
  <ul class="articles--ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="articles--date"
          ><%= post.createdAt.toDateString() %> <%=
          post.createdAt.toLocaleTimeString([], {hour: '2-digit',
          minute:'2-digit'}) %></span
        >
      </a>
    </li>

    <% }) %>
  </ul>
</section>
