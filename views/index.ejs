<section class="author">
  <h1 class="author--heading">Hey, I am Kumar</h1>
  <p class="author--body">Web developer and cinematographer</p>
</section>

<img
  src="/assets/img/hero-image.webp"
  alt="Person looking out through a window"
  class="hero-img"
/>

<section class="articles">
  <h2 class="articles--heading">Latest Posts</h2>
  <ul class="articles--ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post.id %>">
        <span><%= post.title %></span>
        <span class="articles--date"
          ><%= post.createdAt.toDateString() %> <%=
          post.createdAt.toLocaleTimeString([], {hour: '2-digit',
          minute:'2-digit'}) %></span
        >
      </a>
    </li>

    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
  <a href="?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
